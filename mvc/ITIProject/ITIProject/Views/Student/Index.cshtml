@model IEnumerable<ITIProject.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index Student</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               ID
            </th>
            <th>
                Name
            </th>
            <th>
               Age
            </th>
            <th>
                DeptNO
            </th>
            <th>
                CrsId
            </th>
            <th>Del</th>
            <th>Det</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Age
            </td>
            <td>
                    @item.DeptId
            </td>
                <td>
                    @item.CourseId
                </td>
                <td>
                    <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger">Details</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger">Edit</a>
                </td>
        </tr>
}
    </tbody>
</table>
