@model IEnumerable<ITIProject.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseDuration)
            </th>
            <th>Del</th>
            <th>Det</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseDuration)
            </td>
                <td>
                    <a asp-action="Remove" asp-route-id="@item.CourseId" class="btn btn-danger">Delete</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-danger">Details</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-danger">Edit</a>
                </td>
        </tr>
}
    </tbody>
</table>
